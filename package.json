{
  "name": "petri-ts",
  "version": "0.1.3",
  "type": "module",
  "description": "A lightweight TypeScript Petri net engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "lint": "oxlint",
    "fmt": "oxfmt --write src test",
    "check": "tsc --noEmit"
  },
  "keywords": [
    "petri-net",
    "state-machine",
    "workflow",
    "typescript",
    "reachability"
  ],
  "homepage": "https://www.joshtuddenham.dev/blog/petri-nets/",
  "license": "MIT",
  "devDependencies": {
    "oxfmt": "latest",
    "oxlint": "latest",
    "typescript": "^5",
    "vitest": "^4"
  }
}
